<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Arrest Report</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Assistant:wght@200;300;400;500;600;700;800&display=swap");

      *,
      *::after,
      *::before {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }

      :root {
        --primary: #16151a;
        --secondary: #35343c;
        --gray: #9ca3af;
      }

      body {
        font-family:
          "Assistant",
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
        color: #f4f4f4;
        background-color: var(--primary);
      }

      h1,
      h2,
      h3 {
        text-transform: uppercase;
      }

      h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        font-weight: bolder;
      }

      h2 {
        font-size: 1.1rem;
        margin-bottom: 0.3rem;
      }

      .container__section:not(:first-of-type) {
        margin-top: 2rem;
      }

      .container__section__description {
        max-width: 650px;
        font-weight: 500;
      }

      .container__section__table {
        border-collapse: collapse;
        width: 100%;
      }

      .container__section__table th,
      .container__section__table td {
        padding: 0.5rem;
        text-align: left;
        border: 1.5px solid var(--secondary);
        text-transform: capitalize;
      }

      .container__section__table th {
        color: var(--gray);
        background-color: var(--secondary);
        font-size: 0.9rem;
        text-transform: uppercase;
      }

      .container__section__table__violation {
        margin-top: 0.5rem;
      }

      .container {
        padding: 3em;
        width: 100%;
      }
    </style>
  </head>
  <body id="element-to-copy">
    <div class="container">
      <h1 class="container__title">Arrest Report</h1>

      <section class="container__section">
        <h2 class="container__section__title">General Information</h2>

        <table class="container__section__table">
          <thead>
            <tr>
              <th>Officer</th>
              <th>Address</th>
              <th>Postal</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= officer %></td>
              <td><%= record.address %></td>
              <td><%= record.postal %></td>
            </tr>
          </tbody>

          <thead>
            <tr>
              <th>Created At</th>
              <th>Payment Status</th>
              <th>Case Number</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= formatDate(record.createdAt) %></td>
              <td><%= record.paymentStatus %></td>
              <td>#<%= record.caseNumber %></td>
            </tr>
          </tbody>
        </table>
      </section>

      <section class="container__section">
        <h2 class="container__section__title">Citizen Information</h2>

        <table class="container__section__table">
          <thead>
            <tr>
              <th>First name</th>
              <th>Surname</th>
              <th>Date of Birth</th>
              <th>Age</th>
              <th colspan="2">Social Security Number</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= record.citizen?.name %></td>
              <td><%= record.citizen?.surname %></td>
              <td><%= formatDate(record.citizen?.dateOfBirth, { onlyDate: true }) %></td>
              <td><%= age %></td>
              <td colspan="2"><%= record.citizen?.socialSecurityNumber %></td>
            </tr>
          </tbody>

          <thead>
            <tr>
              <th>Gender</th>
              <th>Ethnicity</th>
              <th>Hair Color</th>
              <th>Eye Color</th>
              <th>Weight</th>
              <th>Height</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= record.citizen?.gender?.value %></td>
              <td><%= record.citizen?.ethnicity.value %></td>
              <td><%= record.citizen?.hairColor %></td>
              <td><%= record.citizen?.eyeColor %></td>
              <td><%= record.citizen?.weight %></td>
              <td><%= record.citizen?.height %></td>
            </tr>
          </tbody>

          <thead>
            <tr>
              <th colspan="2">Address</th>
              <th>Postal</th>
              <th>Phone Number</th>
              <th colspan="2">Occupation</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td colspan="2"><%= record.citizen?.address %></td>
              <td><%= record.citizen?.postal %></td>
              <td><%= record.citizen?.phoneNumber %></td>
              <td colspan="2"><%= record.citizen?.occupation %></td>
            </tr>
          </tbody>
        </table>
      </section>

      <% if (record.vehicle) { %>

      <section class="container__section">
        <h2 class="container__section__title">Vehicle Information</h2>

        <table class="container__section__table">
          <thead>
            <tr>
              <th>Plate</th>
              <th colspan="2">VIN Number</th>
              <th>Registered On</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= record.vehicle.plate %></td>
              <td colspan="2"><%= record.vehicle.vinNumber %></td>
              <td><%= formatDate(record.vehicle.createdAt, { onlyDate: true }) %></td>
            </tr>
          </tbody>

          <thead>
            <tr>
              <th>Registration Status</th>
              <th colspan="2">Model</th>
              <th>Color</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= record.vehicle.registrationStatus?.value %></td>
              <td colspan="2"><%= record.vehicle.model.value.value %></td>
              <td><%= record.vehicle.color %></td>
            </tr>
          </tbody>
        </table>
      </section>

      <% } %>

      <section class="container__section">
        <h2 class="container__section__title">Violations</h2>

        <% record.violations.map((violation, index) => { %>

        <table class="container__section__table container__section__table__violation">
          <thead>
            <tr>
              <th>#</th>
              <th colspan="2">Violation</th>
              <th>Counts</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= ++index %></td>
              <td colspan="2"><%= violation.penalCode.title %></td>
              <td><%= violation.counts %></td>
            </tr>
          </tbody>

          <thead>
            <tr>
              <th>Fines</th>
              <th>Jail Time</th>
              <th>Bail</th>
              <th>Community Service</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= violation.fine %></td>
              <td><%= violation.jailTime %></td>
              <td><%= violation.bail %></td>
              <td><%= violation.communityService %></td>
            </tr>
          </tbody>
        </table>

        <% }); %>
      </section>

      <section class="container__section">
        <h2 class="container__section__title">Description</h2>

        <p class="container__section__description"><%= formattedDescription || record.notes %></p>
      </section>
    </div>
  </body>
</html>
