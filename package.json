{
  "private": true,
  "name": "snailycad",
  "version": "1.0.0-beta.38",
  "packageManager": "yarn@3.1.0",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "format:quick": "pretty-quick --staged --pattern \"packages/**/*.{js,jsx,ts,tsx,md,css,json}\"",
    "format": "prettier --write \"./packages/**/**/*.{js,jsx,ts,tsx,md,css,json}\" --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "prepare": "husky install",
    "bump-version": "node scripts/bump-version.mjs"
  },
  "license": "MIT",
  "devDependencies": {
    "@casper124578/eslint-config": "^2.3.2",
    "@casper124578/eslint-config-next": "^1.2.1",
    "@casper124578/eslint-config-react": "^2.2.1",
    "colorette": "2.0.16",
    "copy": "^0.3.2",
    "eslint": "^8.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3"
  }
}
