{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "@snailycad/client#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "copy-env": {
      "dependsOn": [
        "^copy-env"
      ],
      "outputs": [
        ".env"
      ]
    },
    "create-images-domain": {
      "dependsOn": [
        "^create-images-domain"
      ],
      "outputs": [
        "next.config.mjs"
      ]
    },
    "validate-locales": {
      "dependsOn": [
        "^validate-locales"
      ]
    },
    "build": {
      "dependsOn": [
        "copy-env",
        "create-images-domain",
        "validate-locales",
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/**/*.test.ts"
      ],
      "outputs": []
    },
    "watch": {
      "persistent": true,
      "cache": false,
      "outputs": [
        ".next/*",
        "dist/*"
      ]
    }
  },
  "globalDependencies": [
    "**/.env"
  ]
}